---
import Title from "@/components/Title.astro";
import ButtonReserva from "@/components/ButtonReserva.astro";
---

<section class="py-14 md:py-20 px-5 bg-background" id="beneficios">
  <div class="max-w-7xl mx-auto">
    <img
      src="https://res.cloudinary.com/dnwshzyqp/image/upload/v1721360745/manarola/terrazas_qyg7df.svg"
      alt="Icono terrazas"
      class="w-20 mx-auto mb-5 animation-bottom"
      loading="lazy"
    />
    <Title
      title="Sobre terrazas"
      subtitle="La ventaja de vivir frente al mar"
      align="text-center"
      size="text-4xl md:text-[3rem]"
    />
    <p
      class="text-center text-xs md:text-[15px] mt-5 mb-10 leading-[27px] animation-bottom"
    >
      Disfruta de una impresionante vista al mar y una paradisiaca vista al
      Sunset desde tu propia casa
    </p>
    <ButtonReserva />
    <div class="md:grid md:grid-cols-3 gap-5 hidden">
      <div class="p-5 h-[500px]">
        <div
          class="hover:-translate-y-2 transition-transform duration-300 bg-[url('https://res.cloudinary.com/dnwshzyqp/image/upload/v1721360778/manarola/terraza-1_hmo7w8.avif')] bg-no-repeat bg-contain w-full h-full"
        >
        </div>
      </div>
      <div class="p-5 h-[500px]">
        <div
          class="hover:-translate-y-2 transition-transform duration-300 md:mt-20 group bg-[url('https://res.cloudinary.com/dnwshzyqp/image/upload/v1721360780/manarola/terraza-2_vbelg2.avif')] bg-no-repeat bg-cover w-full h-full"
        >
        </div>
      </div>
      <div class="p-5 h-[500px]">
        <div
          class="hover:-translate-y-2 transition-transform duration-300 bg-[url('https://res.cloudinary.com/dnwshzyqp/image/upload/v1726893802/manarola/ChicasMar_voresw.webp')] bg-no-repeat bg-contain w-full h-full"
        >
        </div>
      </div>
    </div>
    <div class="splide mt-5 md:hidden" id="slide-terrazas">
      <div class="splide__arrows">
        <button class="splide__arrow splide__arrow--prev bg-accent">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M16.18 3.269a1 1 0 0 0-1.415 0L8.121 9.913a3 3 0 0 0-.001 4.242l6.57 6.575a1 1 0 1 0 1.415-1.414l-6.573-6.572a1 1 0 0 1 0-1.414l6.648-6.647a1 1 0 0 0 0-1.414Z"
              fill="currentColor"></path></svg
          >
        </button>
        <button class="splide__arrow splide__arrow--next">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M16.18 3.269a1 1 0 0 0-1.415 0L8.121 9.913a3 3 0 0 0-.001 4.242l6.57 6.575a1 1 0 1 0 1.415-1.414l-6.573-6.572a1 1 0 0 1 0-1.414l6.648-6.647a1 1 0 0 0 0-1.414Z"
              fill="currentColor"></path></svg
          >
        </button>
      </div>
      <div class="splide__track">
        <ul class="splide__list">
          <li class="splide__slide h-[500px]">
            <div
              class="bg-[url('https://res.cloudinary.com/dnwshzyqp/image/upload/v1721360778/manarola/terraza-1_hmo7w8.avif')] bg-no-repeat bg-cover w-full h-full"
            >
            </div>
          </li>
          <li class="splide__slide h-[500px]">
            <div
              class="bg-[url('https://res.cloudinary.com/dnwshzyqp/image/upload/v1721360780/manarola/terraza-2_vbelg2.avif')] bg-no-repeat bg-cover w-full h-full"
            >
            </div>
          </li>
          <li class="splide__slide h-[500px]">
            <div
              class="bg-[url('https://res.cloudinary.com/dnwshzyqp/image/upload/v1726893802/manarola/ChicasMar_voresw.webp')] bg-no-repeat bg-cover w-full h-full"
            >
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .splide__arrow {
    background: #f08435;
    opacity: 1;
    color: white;
  }
  .splide__arrow:focus {
    outline: none;
  }
  .splide__arrow--prev {
    left: 10px;
  }
  .splide__arrow--next {
    right: 10px;
  }
  .splide__pagination {
    bottom: -1.5em;
  }
  .splide__pagination__page.is-active {
    background: #f08435;
  }
</style>

<script>
  import Splide from "@splidejs/splide";
  import "@splidejs/splide/css";

  var splideGalleryTerrazas = new Splide("#slide-terrazas", {
    type: "loop",
    autoplay: true,
    perPage: 1,
    focus: "center",
    classes: {
      pagination: "splide__pagination",
      page: "splide__pagination__page",
    },
    mediaQuery: "min",
    breakpoints: {
      640: {
        destroy: true,
      },
    },
  });

  splideGalleryTerrazas.mount();
</script>
