---
import Message from "./icons/Message.astro";
import Person from "./icons/Person.astro";
---

<a
  href="#"
  target="_blank"
  class="bg-[#25D366] rounded-full w-20 h-20 flex items-center justify-center text-white/90 fixed bottom-10 right-7 group z-10 hover:bg-[#6ced9c] transition-colors duration-300"
>
  <div class="w-full h-24 overflow-hidden rounded-b-full relative mb-4">
    <Person class="w-14 absolute bottom-1 left-1/2 -translate-x-1/2" />
  </div>
  <span
    class=" absolute right-16 -top-10 group-hover:animate-bounce group-hover:animation-delay-300 transition-all duration-300"
  >
    <Message class="w-28"
  </span>
</a>
